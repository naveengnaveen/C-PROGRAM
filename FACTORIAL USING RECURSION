#include<stdio.h>
long long factorial(int n)
{
    if(n==0||n==1)
    {
        return 1;
    }
    return n*factorial(n-1);
}
int main()
         {
            int num;
            printf("enter number:");
            scanf("%d",&num);
            if(num<0)
            {
                printf("no factorial \n");

            }
            else
            {
                printf("the factorial of a number is: %d \n", factorial(num));
            }
            return 0;
         }

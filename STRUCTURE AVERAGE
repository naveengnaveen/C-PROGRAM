#include<stdio.h>

struct student
{

    char name[20];
    int total;
     int age;


}s1,s2;

int main()
{
    float avg;

    printf("Enter the name:");
    scanf("%s",s1.name);
    printf("Enter your age:");
    scanf("%d",&s1.age);
    printf("Enter your total mark:");
    scanf("%d",&s1.total);

     printf("Enter the name:");
    scanf("%s",s2.name);
    printf("Enter your age:");
    scanf("%d",&s2.age);
    printf("Enter your total mark:");
    scanf("%d",&s2.total);

avg=(s1.total+s2.total/2);
printf("the average mark of the students: %f \n",avg);

}

